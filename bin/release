#!/usr/bin/env ruby

$:.unshift File.expand_path("../../lib", __FILE__)
require "language_pack"
require 'yaml'

ENV["PATH"] = "vendor/imagemagick/bin:#{ENV["PATH"]}"

if pack = LanguagePack.detect(ARGV[0], ARGV[1])
  release = pack.release

  release = YAML::load(release)
  release['config_vars']['PATH'] = "vendor/imagemagick/bin:#{release['config_vars']['PATH']}"
  puts release.to_yaml
end